button
  font-family: Whitney SSm A, sans-serif

.btn__container
  display: flex
  justify-content: center

  +respond-to($xsmall)
    margin: 4px 12px 0 12px

.btn-container.btn-container--under-table
  margin-top: 32px
  +respond-from($large)
    margin-top: 42px

.btn__main-text
  border-bottom: 1px solid rgba(86,86,206,.3)
  transition: .25s ease-out
  color: #2020a3

.btn__main
  display: inline-block
  font-size: 12px
  line-height: 26px
  font-weight: 600
  color: #2020a3
  text-transform: uppercase
  border-radius: 5px
  padding: 14px 24px
  border: 1px solid $color-purple
  cursor: pointer
  box-sizing: border-box
  transition: .25s ease-out
  background: $color-white

  &:hover
    background: #5656ce
    color: $color-white
    border: 1px solid $color-white
    .btn__main-icon
      fill: $color-white
    .btn__main-text
      border-bottom: 1px solid transparent
      color: $color-white

  +respond-to($xsmall)
    width: 100%
    max-width: 300px
    display: block
    padding: 10px 12px
    font-size: 10px
    text-align: center
    margin-top: 12px

.btn__main-icon
  position: relative
  top: 5px
  margin-left: 10px
  transition: fill .25s ease-out
  fill: #5656ce
  +respond-to($xsmall)
    display: none

.btn__container--green
  .btn__main-text
    color: #29b16a

  .btn__main-icon
    fill: #70E5A8

  .btn__main
    color: #29b16a
    border: 1px solid $color-green
    background-color: $color-white

    .btn__main-text
      border-bottom: 1px solid rgba(112,229,168,.3)

    &:hover
      background: #70e5a8
      border: 1px solid $color-white
      color: $color-white
      .btn__main-icon
        fill: $color-white
      .btn__main-text
        border-bottom: 1px solid transparent
