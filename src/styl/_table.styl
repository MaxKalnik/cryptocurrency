.btn-container
  display: flex
  justify-content: center
  margin-top: 24px

.btn-go-back
  display: inline-block
  color: #24A0EE
  border-radius: 5px
  padding: 12px 24px
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  cursor: pointer
  transition: .25s
  border: 1px solid rgba(29, 125, 224,.2)
  &:hover
    background: #24A0EE
    color: #ffffff
    border-color: #ffffff

.mobile-only
  display: none

+respond-to($small)
  .ranking-table.ranking-table--fixed
    th
      width: 100%
      background-image: linear-gradient(90deg, #29b16a 0, #35B26F 100%)
    tbody
      tr
        &:nth-child(odd)
          background-image: linear-gradient(90deg, #F5FBF8 0%, #F5FBF8 100%)

  .section--table
    .breadcrumbs__wrap
      white-space: nowrap
      max-width: 100%
      box-sizing border-box

  // .ranking-table
  //   thead
  //     th
  //       height: 56px
  //       padding: 0 8px

  //   tbody
  //     td
  //       padding: 0 8px

  // .ranking-table__container
  //   display: flex

  .section--table
    margin-bottom: 30px
    .breadcrumbs__wrap
      margin-bottom: 30px

    .btn-container
      margin-top: 24px

  .ranking-table__container
    display: flex
    flex-direction: row

  .mobile-only
    width: 136px
    display: flex
    flex-direction: column
    padding-left: 1px
    background-image: linear-gradient(90deg, #EAF8F1 0%, #EAF8F1 100%)
    border-radius: 5px 0 0 5px
    overflow-x: scroll
    box-shadow: 2px 0 13px 0 rgba(0,0,0,.16)
    position: relative

  .ranking-table
    thead
      th
        height: 56px
        padding: 0 8px

    tbody
      td
        padding: 0 8px

  .ranking-table.ranking-table--data
    min-width: 610px

  .ranking-table.ranking-table--fixed
    width: 136px
    position: relative
    border-radius: 5px 0 0 0
    border-right: none
    box-shadow: 2px 0 13px 0 rgba(0,0,0,0.16)

    th
      vertical-align: middle

    th:last-child
      position: relative
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 60px
        background: rgba(255, 255, 255, 0.3)
        right: 0
        top: 0

    td
      &:first-child
        width: 2%

  .ranking-table__wrapper
    width: calc(100% - 137px)
    border-radius: 0 5px 5px 0
    overflow-x: scroll
    padding-left: 0
    padding-right: 0
    background-image: linear-gradient(90deg, #EAF8F1 0%, alpha(#73EAAC, 10%) 27%, #EFFCF6 50%, #EFF8F9 76%, #EEEFFA 100%)

  .ranking-table--data
    border-radius: 0 5px 5px 5px
    border-left: none
    thead
      th
        &:first-child
          display: none

    tbody
      td
        &:first-child
          display: none

+respond-to($xsmall)
  .ranking-table.ranking-table--data
    min-width: 610px

  .mobile-only
    width: 120px

  .ranking-table.ranking-table--fixed
    width: 120px

  .ranking-table__wrapper
    width: calc(100% - 120px)
